    <section class="row container"> <h2 class="my-5 text-danger fw-bold">Liste des utilisateurs non autoris√©s :</h2>
        {% for user in users %}
            {% if not user.isAutorise %}
                <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                    <div class="col">
                        <div class="card h-200 mb-3">
                            <div class="card-header">
                                <h2 class="card-title">{{user.prenom}} {{user.nom}}</h2>
