{% extends 'layouts/base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="./styles/panier.css">
{% endblock %}

{% block body %}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">VOTRE RESEVERVATION</h1>
     </div>
</section>

<section class="container mt-5" id="detail-reservation">
    <table class="table">
        <thead>
            <tr class="text-center">
                <th></th>
                <th>Livre</th>
                <th>Quantite</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr class="text-center">
                    <td> <img src="{{item.livre.illustration}}" height="50" width="50" alt="{{item.livre.titre}}"> </td>
                    <td> {{item.livre.titre|capitalize}} </td>	
                    <td > <span class="text-center">{{item.quantite}}</span> </td>
                    <td>
                        <div class="d-flex justify-content-around">
                            <button id="add-one-{id}" class="btn btn-sm btn-success"><i class="fas fa-plus"></i> </button> 
                            <button id="delete-one-{id}" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> </button> 
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</section>

<hr class="container my-5 ">

<section id="Boutons">
    <div class="container d-flex justify-content-around">
        <button type="submit" class="btn btn-outline-success w-25 mb-5">
            Confirmer la réservation
        </button>
         <a href="{{path('app_livre')}}" class="btn btn-outline-danger w-25 mb-5">Annuler</a>
    </div>
</section>

<section id="Emprunt-restant">

    <div class="{{emprunt == 0 ? 'bg-danger' : 'bg-success'}} shadow rounded container p-2 text-white text-center">
        <h4 class="jumbotron-heading">
            {{emprunt == 0 ? 'Vous avez emprunter le nombre maximal autorisé.' : 'Emprunt disponible : {{emprunt}} '}} 
            {# <span class="h4 ms-2">{{emprunt}}</span> #}
        </h4>
     </div>
</section>
{# <h5 class="{{livre.quantite != 0 ? 'text-success' : 'text-danger'}} card-title"> #}
{% endblock %}
