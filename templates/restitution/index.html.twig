{% extends "layouts/base.html.twig" %}

{% block body %}

    <h1 class="text-center">Gestions des emprunts</h1>

    <section class="container" id="Restitution">

        {% for emprunts in emprunt %}
            {% set TODAY =  'now'|date("d-m-Y") %}
            {% set RESTITUTION = emprunts.empruntedAt|date_modify("+21 day")|date("d-m-Y") %}

            <div class="mt-5 mb-2 d-flex justify-content-between">
                <h3>Prêt n° {{ loop.index }}</h3>
                <h5 class="{{TODAY > RESTITUTION ? 'text-danger fw-bold' : ''}}"> A rendre : {{ RESTITUTION }}</h5>
                <button class="btn btn-sm btn-danger">Rendre</button>
            </div>

            {% for livre in emprunts.livre %}
                <div class = "list-group mb-2">
                    <span class = "list-group-item d-flex justify-content-between">
                        <h4 class = "list-group-item-heading">{{ livre.titre|capitalize }}</h4>
                    </span>
                </div>
            {% endfor %}

            {# Afficher le nombre de livre prêter #}
            {% for livre in emprunts.livre %}
                {{ livre.pret }}
            {% endfor %}


        {% endfor %}
    </section>

{% endblock %}

